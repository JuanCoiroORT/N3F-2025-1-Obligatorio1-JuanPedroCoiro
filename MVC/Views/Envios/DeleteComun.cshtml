@model Compartido.DTOs.ComunDTO

<h2>¿Está seguro que desea eliminar este envío?</h2>

<div>
    <p><strong>Id:</strong> @Model.Id</p>
    <p><strong>Cliente:</strong> @Model.ClienteId</p>
    <p><strong>Peso:</strong> @Model.Peso</p>
    <p><strong>Dirección:</strong> @Model.Agencia.DireccionPostal</p>
</div>

<form asp-action="DeleteComun" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

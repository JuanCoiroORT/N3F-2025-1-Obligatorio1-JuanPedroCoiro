@model MVC.Models.ViewModelEnvioUrgente;

<h2>Crear Envio Urgente</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>
}
<form asp-action="CreateUrgente" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="urgenteDTO.Peso" class="control-label">Peso (kg)</label>
        <input asp-for="urgenteDTO.Peso" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="urgenteDTO.ClienteId" class="control-label"></label>
        <select asp-for="urgenteDTO.ClienteId" class="form-control" asp-items="Model.Clientes">
            <option value="">Seleccione el email del cliente</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="urgenteDTO.DireccionPostal" class="control-label">Direccion Postal</label>
        <input asp-for="urgenteDTO.DireccionPostal" class="form-control" />
    </div>
    <div class="row mt-5">
        <div class="col-2">
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
        <div>
            <button type="submit" class="btn btn-success">Crear Envio</button>
        </div>
    </div>
</form>
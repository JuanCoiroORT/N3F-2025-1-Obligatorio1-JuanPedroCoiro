@model MVC.Models.ViewModelUsuariosIndex;

@{
    ViewData["Title"] = "CRUD de Usuarios";
}

<form asp-action="Index" method="get">
    <div class="form-group">
        <div class="row">
            <div class="col-4">
                <input type="text" name="name" class="form-control" placeholder="Buscar por nombre"/>
            </div>
            <div class="col-4">
                <button type="submit" class="btn btn-primary">Buscar</button>
            </div>
        </div>
    </div>
</form>

<a asp-action="Create" class="btn btn-stripped" style="float: right">Crear Usuario</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>CI</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var usuario in Model.usuariosDTO)
        {
            <tr>
                <td>@usuario.Id</td>
                <td>@usuario.CI</td>
                <td>@usuario.Nombre</td>
                <td>@usuario.Apellido</td>
                <td>@usuario.Rol</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@usuario.Id" class="btn btn-info">Editar</a>
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@usuario.Id" method="get">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
